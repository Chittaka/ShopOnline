<Window x:Class="ShopOnline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopOnline"
        mc:Ignorable="d"
        Title="ShopOnline" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="DarkRed"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхнее меню -->
        <Menu Grid.Row="0" Background="DarkBlue" Foreground="White">
            <MenuItem Header="Файл">
                <MenuItem Header="Экспорт в JSON" Command="{Binding ExportJsonCommand}"/>
                <MenuItem Header="Импорт из JSON" Command="{Binding ImportJsonCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Основная область -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Боковая панель -->
            <Border Grid.Column="1" Background="DarkBlue" Padding="10" Margin="305,0,-5,0">
                <ScrollViewer x:Name="LeftScrollViewer" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Таблицы" Foreground="White" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <ListView ItemsSource="{Binding Tables}" 
                                  SelectedItem="{Binding SelectedTable}"
                                  Background="Transparent" Foreground="White">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding TableName}" Margin="0,0,10,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Рабочая область -->
            <Border Background="#ECF0F1" Padding="20" Grid.ColumnSpan="2" Margin="0,0,250,0">
                <ScrollViewer x:Name="RightScrollViewer">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedTable.TableName, FallbackValue='Выберите таблицу из списка' }" 
                                   FontSize="20" Margin="0,0,0,20"/>

                        <!-- DataGrid для отображения данных -->
                        <DataGrid ItemsSource="{Binding TableData}" 
                                  SelectedItem="{Binding SelectedRow}"
                                  AutoGenerateColumns="True"
                                  IsReadOnly="False" 
                                  Margin="0,10,0,20"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  Background="White"
                                  RowHeaderWidth="0">
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" Height="46" HorizontalAlignment="Center">
                            <Button Content="Добавить" 
                                    Style="{StaticResource ModernButton}" 
                                    Command="{Binding AddRecordCommand}"
                                    Width="100"/>
                            <Button Content="Сохранить" 
                                    Style="{StaticResource ModernButton}" 
                                    Command="{Binding SaveRecordCommand}"
                                    Width="100"/>
                            <Button Content="Удалить" 
                                    Style="{StaticResource ModernButton}" 
                                    Command="{Binding DeleteRecordCommand}"
                                    Width="100"/>
                        </StackPanel>

                        <!-- Элементы управления CRUD -->
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Статусная строка -->
        <Border Grid.Row="2" Background="DarkBlue" Height="30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,0">
                <TextBlock Text="Подключено к БД" Foreground="White"/>
                <TextBlock Text="{Binding ConnectionStatus}" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
